<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:orientation="vertical"
    >

    <view
            class="com.nimbledevices.indoorguide.ui.FloorPlanViewPager"
            android:id="@+id/mapview_ini"
            android:layout_alignParentTop="true"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/button_bar_ini"
            />

    <LinearLayout
        android:id="@+id/button_bar_ini"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text="Set your destination..."
            android:onClick="onSearch"
            android:id="@+id/btn_up_ini"
            android:enabled="true"
            android:background="#343434"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

    </LinearLayout>

</RelativeLayout>
